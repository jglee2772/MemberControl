<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.himedia.mc.MenuDAO">
	<select id="getMenuList" resultType="com.himedia.mc.menuDTO">
		select id,name,price from menu
	</select>
	<insert id='insertAddMenu'>
		insert into menu set name=#{param1},price=#{param2}
	</insert>
	<delete id="deleteMenu">
		delete from menu where id=#{param1}
	</delete>
	<update id="updateMenu">
		update menu set name=#{param2},price=#{param3} where id=#{param1}
	</update>
	<insert id='insertAddrev'>
		insert into revenue set mobile=#{param1},menuid=#{param2},qty=#{param3},menusum=#{param4}
	</insert>
	<select id="getRevList" resultType="com.himedia.mc.revenueDTO">
		select a.id,a.mobile,b.name menuid,a.qty,a.menusum,a.created
		from revenue a, menu b
		where a.menuid=b.id
		order by a.id desc;
	</select>
</mapper>